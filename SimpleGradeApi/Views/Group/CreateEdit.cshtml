@model SimpleGrade.Models.Group;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Create or modify Group</h1>
</div>
<hr/>
<form asp-action="CreateEdit" method="post">
    <div class="card-body">
        <div class="row input-group mb-3">
            <div class="form-group">
                <label for="Name" class="form-label">Name</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="ClassName"/>
            </div>
            <div class="row">
                <label for="Year" class="form-label">Year</label>
                <input asp-for="Year" min="1900" max="2099" step="1" value="2016" type="number" class="form-control" placeholder="Year" />
            </div>
        </div>
    </div>
    <div class=" card-footer">
        <button class="btn btn-primary" type="submit">Speichern</button>
    </div>
</form>

